<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CryptoCurrency</title>
    <link rel="stylesheet" type="text/css" href="../style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .autocomplete {
            width: auto;
            max-width: 200px; /* You can adjust the max-width as needed */
        }

        /* Footer styling */
        footer {
            margin-top: auto;
            background-color: #f8f9fa; /* Change background color as needed */
            color: #6c757d; /* Change text color as needed */
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <div class="container">
        <h1>Welcome to the website! Please enter the details.</h1>
    </div>
    <form id="myForm" method="post">
        <label for="token">Crypto Name</label>
        <input type="text" id="token" name="tokenName" placeholder="Enter cryptocurrency name" autocomplete="off">
        <input id="post" type="submit" value="Submit" formaction="/post-crypto">
    </form>
    <div class="answer">
        <%= content %>
    </div>

    <script>
        const inputField = document.getElementById("token");
        const cryptocurrencies = [
            "bitcoin", "ethereum", "tether", "bnb", "solana", "usdc", "xrp", "cardano", "dogecoin",
            "shiba-inu", "avalanche", "polkadot", "tron", "chainlink", "polygon", "wrapped-bitcoin",
            "uniswap", "bitcoin-cash", "internet-computer", "litecoin", "near-protocol", "ethereum-classic",
            "filecoin", "unus-sed-leo", "multi-collateral-dai", "stacks", "crypto.com-coin", "stellar",
            "render-token", "okb", "vechain", "cosmos", "the-graph", "theta", "lido-dao", "injective",
            "monero", "arweave", "thorchain", "fetch.ai", "bitcoin-bep2", "fantom", "bitcoin-sv", "algorand",
            "flow", "aave", "hedera-hashgraph", "maker", "multiversx", "singularitynet", "the-sandbox", "quant",
            "axie-infinity", "kucoin-token", "helium", "tezos", "mina", "akash-network", "chiliz", "eos", "decentraland",
            "ecash", "trueusd", "conflux", "gala", "neo", "wemix", "oasis-network", "kava", "woo", "gnosis", "iota",
            "klaytn", "synthetix", "nervos-network", "ribbon-finance", "curve-dao-token", "pancakeswap", "bitcoin-gold",
            "nexo", "ftx-token", "enjin-coin", "dydx", "pendle", "superverse", "1inch-network", "compound", "holo",
            "rocket-pool", "ocean-protocol", "golem", "frax-share", "celo", "trust-wallet-token", "theta-fuel",
            "zilliqa", "livepeer", "iotex", "origintrail", "aioz-network"
        ];

        inputField.addEventListener("input", function() {
            const inputText = this.value.toLowerCase();
            const suggestions = cryptocurrencies.filter(crypto => crypto.toLowerCase().startsWith(inputText));
            displayAutocomplete(suggestions);
        });

        function displayAutocomplete(suggestions) {
            const autocompleteDiv = document.querySelector(".autocomplete");
            if (!autocompleteDiv) {
                const formElement = document.getElementById("myForm");
                const newDiv = document.createElement("div");
                newDiv.classList.add("autocomplete");
                formElement.appendChild(newDiv);
            }

            autocompleteDiv.innerHTML = "";
            suggestions.forEach(suggestion => {
                const suggestionElement = document.createElement("div");
                suggestionElement.textContent = suggestion;
                suggestionElement.classList.add("suggestion");
                suggestionElement.addEventListener("click", function() {
                    inputField.value = this.textContent;
                    autocompleteDiv.innerHTML = "";
                });
                autocompleteDiv.appendChild(suggestionElement);
            });
        }

        // Hide autocomplete suggestions when clicking outside the input field
        document.addEventListener("click", function(event) {
            if (!inputField.contains(event.target)) {
                const autocompleteDiv = document.querySelector(".autocomplete");
                if (autocompleteDiv) {
                    autocompleteDiv.remove();
                }
            }
        });
    </script>
    

    <footer class="mt-auto py-3 border-top">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <span>Â© 2024 Vedant Sadgir</span>
                
            </div>
        </div>
    </footer>
</body>
</html>
